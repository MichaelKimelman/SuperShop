@page
@model StefansSuperShop.Pages.Admin.NewsletterModel
@{
}
<div class="container">
    <h1>Newsletters</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Message</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.Newsletters)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Title</td>
                    <td>@p.Message</td>
                    <td>
                        <a class="btn btn-primary " role="button" href="/admin/newsletters/show?id=@p.Id">Show mail list</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
    <a href="/admin" class="btn btn-primary btn-lg " role="button">Back</a>
    <a href="#" class="btn btn-primary btn-lg " role="button">Add new</a>
</div>