@page
@model StefansSuperShop.Pages.Admin.CategoriesCRUD.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Categories</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>
                        <a class="btn btn-primary" role="button" asp-page="/Admin/CategoriesCRUD/Edit" asp-route-id="@category.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary btn-lg" role="button" asp-page="/Admin/CategoriesCRUD/Create" >Add new</a>
</div>
